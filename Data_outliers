import pandas as pd

def identify_outliers_iqr(df):
    """
    Identify outliers using the Interquartile Range (IQR) method.
    
    Parameters:
    - df: Pandas DataFrame
    
    Returns:
    - outliers_df: DataFrame containing rows with outliers and their details
    """
    outliers = {}
    
    # Calculate Q1 (25th percentile) and Q3 (75th percentile) for each column
    Q1 = df.quantile(0.25)
    Q3 = df.quantile(0.75)
    
    # Calculate IQR for each column
    IQR = Q3 - Q1
    
    # Define threshold for outliers (typically 1.5 times the IQR)
    threshold = 1.5
    
    # Identify outliers for each column
    for col in df.columns:
        lower_bound = Q1[col] - threshold * IQR[col]
        upper_bound = Q3[col] + threshold * IQR[col]
        outliers[col] = df[(df[col] < lower_bound) | (df[col] > upper_bound)]
    
    # Concatenate all outlier rows into a single DataFrame
    outliers_df = pd.concat(outliers.values(), ignore_index=True)
    
    return outliers_df

# Example usage
input_csv_file = 'cleaned_data.csv'
output_csv_file = 'outliers_data.csv'

# Read cleaned data into DataFrame
df = pd.read_csv(input_csv_file)

# Identify outliers using IQR method
outliers_df = identify_outliers_iqr(df)

# Save outliers data to CSV file
outliers_df.to_csv(output_csv_file, index=False)

print(f"Outliers data saved to: {output_csv_file}")
