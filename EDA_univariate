import numpy as np
import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns

# Load the cleaned dataset
df = pd.read_csv('cleaned_data.csv')

# Display the first few rows of the dataframe
print(df.head())

# Display summary statistics
print(df.describe(include='all'))

# Check for missing values
print(df.isnull().sum())

# Set up the plotting area
plt.figure(figsize=(16, 9))

# Plot the diagnosis distribution
plt.subplot(221)
df['diagnosis'].value_counts().plot(kind='bar', title='Diagnosis')
plt.xticks(rotation=0)

# Plot the tumor radius distribution
plt.subplot(222)
sns.histplot(df['radius_mean'], bins=20, kde=True)
plt.title('Tumor Radius')

# Plot the tumor texture distribution
plt.subplot(223)
sns.histplot(df['texture_mean'], bins=20, kde=True)
plt.title('Tumor Texture')

# Plot the tumor perimeter distribution
plt.subplot(224)
sns.histplot(df['perimeter_mean'], bins=20, kde=True)
plt.title('Tumor Perimeter')

# Display the plots
plt.tight_layout()
plt.show()

df.boxplot()

sns.distplot(df['math score'])

corr = df.corr()
sns.heatmap(corr, annot=True, square=True)
plt.yticks(rotation=0)
plt.show()